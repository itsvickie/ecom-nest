generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Product {
  id          String   @id @unique() @default(uuid()) @map("product_id")
  name        String
  description String?
  image_key   String
  price       Float    @default(0.00)
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  @@map("products")
}
